FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Actualizar pip primero
RUN pip install --upgrade pip

# Instalar dependencias de desarrollo
# Copiar ambos archivos porque requirements-dev.txt incluye requirements.txt
COPY requirements.txt requirements-dev.txt /app/
# Usar timeout más largo y retries para evitar problemas de red
RUN pip install --no-cache-dir --progress-bar on \
    --default-timeout=100 \
    --retries 5 \
    -r requirements-dev.txt

# Exponer puerto
EXPOSE 7860

# En desarrollo, montamos el código como volumen
# El comando se ejecuta desde docker-compose
CMD ["python", "app.py"]

